@model DAL.Modelos.Usuarios

@{
    var mensajeRegistroExitoso = ViewBag.MensajeRegistroExitoso as string;
    var contraseñaModificada = ViewBag.contraseñaModificada as string;
    var tokenInvalido = ViewBag.tokenNoValido as string;
}
<div class="contenedor form-login">
    <p class="titulo">Bienvenido</p>
    <form class="form" method="post" action="@Url.Action("InicioDeSesion", "ControladorIniciarSesion")">
        <input type="email" class="input" placeholder="Email">
        <input type="password" class="input" placeholder="Contraseña">
        <button class="form-btn" formaction="@Url.Action("Login", "ControladorIniciarSesion")">Acceder</button>
        <button class="form-btn" formaction="@Url.Action("Registro", "ControladorRegistro")">Registrarse</button>
    </form>
    <form method="get" action="@Url.Action("IniciarRecuperacion", "ControladorRecuperarContraseña")">
        <button class="form-btn negro">Recuperar contraseña</button>
    </form>
    <div class="text-success mt-5">
        <b>@contraseñaModificada</b>
    </div>
    <div class="text-danger mt-5">
        <b>@tokenInvalido</b>
    </div>
</div>
@if (!string.IsNullOrEmpty(mensajeRegistroExitoso))
{
    <div class="alert alert-success">
        @mensajeRegistroExitoso
    </div>
}


@if (!string.IsNullOrEmpty(ViewBag.MensajeLoginError))
{
    <div class="alert alert-danger">
        @ViewBag.MensajeLoginError
    </div>
}
