<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Inicio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/menu.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/Poyecto_Gestor_Biblioteca_Web_Los_Rapidos.styles.css" asp-append-version="true" />

    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>

    <header>

        <nav>
            <div class="menu">
                <div class="logo">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Biblioteca</a>
                </div>
                <ul class="nav-links">
                    <li><a asp-controller="ControladorIniciarSesion" asp-action="Login">Iniciar Sesion</a></li>
                </ul>

            </div>
        </nav>

    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
